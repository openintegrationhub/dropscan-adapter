{
  "title": "Dropscan API (Node.js)",
  "description": "elastic.io component for the Dropscan API",
  "buildType": "docker",
  "envVars": {
    "DROPSCAN_CLIENT_KEY": {
      "required": true,
      "description": "dropscan OAuth client key"
    },
    "DROPSCAN_CLIENT_SECRET": {
      "required": true,
      "description": "dropscan OAuth client secret"
    }
  },
  "credentials": {
    "verifier": "verifyCredentials.js",
    "fields": {
      "oauth": {
        "label": "Authentication",
        "viewClass": "OAuthFieldView",
        "required": true
      }
    },
    "oauth2": {
      "client_id": "{{DROPSCAN_CLIENT_KEY}}",
      "client_secret": "{{DROPSCAN_CLIENT_SECRET}}",
      "auth_uri": "https://secure.dropscan.de/oauth/authorize",
      "token_uri": "https://secure.dropscan.de/oauth/token"
    }
  },
  "triggers": {
    "getMailingsByStatus": {
      "main": "./lib/triggers/getScanboxes.js",
      "type": "polling",
      "title": "Get Scanboxes",
      "metadata": {
        "out": "./lib/schemas/getScanboxes.out.json"
      }
    }
  }
}
